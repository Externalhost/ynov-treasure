extends layout

block content

  include nav
  
  section.main
    .card.card-silver(data-aos="fade-left")
      .card-top
        figure
          img(src='images/silver.png', alt='')
        h2.card-title.text-uppercase
          | silver
        span.card-subtitle.text-uppercase
          | Solo
        span.card-price.text-uppercase
          b
            | $
            big 12
          |  to win
      .card-bot
        ul
          li Dificulty : 
            span.silver-dificulty Easy
          li Timeout : 
            span.silver-timeout 60min
          li 
            | Current players : 
            span.silver-players ? 
            | / 20
        a.btn.btn-silver.text-uppercase(href='#') Join
    .card.card-diamond(data-aos="fade-right")
      .card-top
        figure
          img(src='images/diamond.png', alt='')
        h2.card-title.text-uppercase
          | diamond
        span.card-subtitle.text-uppercase
          | Solo
        span.card-price.text-uppercase
          b
            | $
            big 99
          |  to win
      .card-bot
        ul
          li Dificulty : 
            span.diamond-dificulty Hard
          li Timeout : 
            span.diamond-timeout 30min
          li 
            | Current players : 
            span.diamond-players ? 
            | / 15
        a.btn.btn-diamond.text-uppercase(href='#') Join
