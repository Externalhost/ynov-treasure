extends layout

block content
  section.main
    .card
      .card-top
        figure
          img(src='images/silver.png', alt='')
        h2.card-title.silver-title.text-uppercase
          | silver
        span.card-subtitle.text-uppercase
          | Solo
        span.card-price.text-uppercase
          b
            | $
            big 12
          |  to win
      .card-bot
        ul
          li Dificulty : 
            span.silver-dificulty Easy
          li Timeout : 
            span.silver-timeout 60min
